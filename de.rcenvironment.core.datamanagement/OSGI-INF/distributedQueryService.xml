<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" name="Distributed Query Service">
	<implementation class="de.rcenvironment.rce.datamanagement.internal.DistributedQueryServiceImpl" /> 
	<service>
		<provide interface="de.rcenvironment.rce.datamanagement.DistributedQueryService" /> 
	</service>
	<reference bind="bindCommunicationService"
 		cardinality="1..1"
 		interface="de.rcenvironment.rce.communication.CommunicationService"
 		name="Communication Service"
 		policy="dynamic"
 	/>
 	<reference bind="bindPlatformService"
 		cardinality="1..1"
 		interface="de.rcenvironment.rce.communication.PlatformService"
 		name="Platform Service"
 		policy="dynamic"
 	/>
</scr:component>

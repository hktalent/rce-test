				<module>../de.rcenvironment.components.simplewrapper.common.tests</module>
				<module>../de.rcenvironment.components.simplewrapper.execution</module>
				<module>../de.rcenvironment.components.simplewrapper.gui</module>
				<!-- sql component -->
				<module>../de.rcenvironment.components.sql.common</module>
				<module>../de.rcenvironment.components.sql.common.tests</module>
				<module>../de.rcenvironment.components.sql.execution</module>
				<module>../de.rcenvironment.components.sql.gui</module>
				<!-- standard components feature -->

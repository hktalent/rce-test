<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" factory="de.rcenvironment.rce.component" name="Optimizer">

	<implementation class="de.rcenvironment.rce.components.optimizer.OptimizerComponent"/>
	<service>
		<provide interface="de.rcenvironment.rce.component.Registerable"/>
	</service>
	
	<property name="rce.component.name" type="String" value="Optimizer"/>
	
	<property name="rce.component.group" type="String" value="Studies"/>
	
	<property name="rce.component.class" type="String" value="de.rcenvironment.rce.components.optimizer.OptimizerComponent"/>
	
	<property name="rce.component.icon-16" type="String" value="/resources/opti_16.png"/>
  	<property name="rce.component.icon-32" type="String" value="/resources/opti_32.png"/>
  	<property name="rce.component.icon-64" type="String" value="/resources/opti.png"/>
  
    <reference
        name="Optimizer Result Service"
        interface="de.rcenvironment.rce.components.optimizer.commons.OptimizerResultService"
        cardinality="1..1"
        bind="bindOptimizerResultService"
        unbind="unbindOptimizerResultService"
        policy="dynamic"
    />
 <reference name="Distributed Notification Service"
		interface="de.rcenvironment.rce.notification.DistributedNotificationService"
		cardinality="1..1"
		bind="bindDistributedNotificationService"
		unbind="unbindDistributedNotificationService"
		policy="dynamic"
	/>
    
</scr:component> 

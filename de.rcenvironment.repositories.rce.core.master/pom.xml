				<!-- pioneer component -->
				<module>../de.rcenvironment.components.pioneer.common</module>
				<module>../de.rcenvironment.components.pioneer.execution</module>
				<module>../de.rcenvironment.components.pioneer.gui</module>
				<!-- example components feature -->
				<module>../de.rcenvironment.componentgroups.examples.feature</module>
			</modules>
		</profile>
		<profile>
			<id>buildApplicationRepository</id>
			<activation>
				<property>
					<name>!rce.maven.omitCoreRepository</name>
				</property>
			</activation>
			<modules>
				<module>../de.rcenvironment.repositories.rce.core</module>
			</modules>
		</profile>
	</profiles>


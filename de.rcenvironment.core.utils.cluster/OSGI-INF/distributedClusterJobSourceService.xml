<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="Distributed Cluster Job Source Service">
	<implementation class="de.rcenvironment.core.utils.cluster.internal.DistributedClusterJobSourceServiceImpl" />
	<service>
    	<provide interface="de.rcenvironment.core.utils.cluster.DistributedClusterJobSourceService"/>
	</service>
	<reference
		name="Communication Service"
		interface="de.rcenvironment.rce.communication.CommunicationService"
		cardinality="1..1"
		bind="bindCommunicationService"
		policy="dynamic"/>
 	<reference
		name="Platform Service"
		interface="de.rcenvironment.rce.communication.PlatformService"
		cardinality="1..1"
		bind="bindPlatformService"
		policy="dynamic"
	/>
	<reference
		name="Cluster Job Source Service"
		interface="de.rcenvironment.core.utils.cluster.ClusterJobSourceService"
		cardinality="1..1"
		bind="bindClusterJobSourceService"
		policy="dynamic"
	/>
</scr:component>

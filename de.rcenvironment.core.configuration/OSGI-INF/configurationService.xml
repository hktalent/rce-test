<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
	activate="activate" name="Configuration Service">
	<implementation
		class="de.rcenvironment.rce.configuration.internal.JSONConfigurationService" />
	<service>
		<provide interface="de.rcenvironment.rce.configuration.ConfigurationService" />
	</service>
	<reference bind="addErrorListener" cardinality="0..n"
		interface="de.rcenvironment.rce.configuration.ConfigurationServiceMessageEventListener"
		name="ConfigurationServiceMessageEventListener" policy="dynamic"
		unbind="removeErrorListener" />
	<reference bind="bindDiscoveryBootstrapService" cardinality="1..1"
		interface="de.rcenvironment.rce.configuration.discovery.bootstrap.DiscoveryBootstrapService"
		name="DiscoveryBootstrapService" policy="static" />
</scr:component>

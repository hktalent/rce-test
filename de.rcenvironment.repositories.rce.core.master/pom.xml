	<profiles>
		<profile>
			<id>includeComponentsByDefault</id>
			<activation>
				<property>
					<!-- intended to speed up test-first development of non-component bundles; -->
					<!-- note that without components, the core repository won't build either -->
					<name>!rce.maven.omitCoreComponents</name>
				</property>
			</activation>
			<modules>

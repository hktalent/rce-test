<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" immediate="true" name="Component Registry">
	<implementation class="de.rcenvironment.rce.component.internal.ComponentRegistryImpl"/>
	<service>
		<provide interface="de.rcenvironment.rce.component.ComponentRegistry"/>
	</service>
	
	<reference name="Component Factory"
		interface="org.osgi.service.component.ComponentFactory"
		cardinality="0..n"
		bind="addComponent"
		unbind="removeComponent"
		policy="dynamic"
		target="(component.factory=de.rcenvironment.rce.component)"/>
		
	<reference name="Component Controller Factory"
		interface="org.osgi.service.component.ComponentFactory"
		cardinality="1..1"
		bind="bindComponentControllerFactory"
		policy="dynamic"
		target="(component.factory=de.rcenvironment.rce.component.controller)"/>
	
	<reference name="Configuration Service"
		interface="de.rcenvironment.rce.configuration.ConfigurationService"
		cardinality="1..1"
		bind="bindConfigurationService"
		policy="dynamic"
		/>
	
	<reference name="Platform Service"
		interface="de.rcenvironment.rce.communication.PlatformService"
		cardinality="1..1"
		bind="bindPlatformService"
		policy="dynamic"
		/>
	
	<reference name="Distributed Notification Service"
		interface="de.rcenvironment.rce.notification.DistributedNotificationService"
		cardinality="1..1"
		bind="bindDistributedNotificationService"
		policy="dynamic"
		/>
</scr:component>

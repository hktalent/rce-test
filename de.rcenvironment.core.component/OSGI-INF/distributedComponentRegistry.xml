<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" name="Distributed Component Registry">
	<implementation class="de.rcenvironment.rce.component.internal.DistributedComponentRegistryImpl"/>
	<service>
		<provide interface="de.rcenvironment.rce.component.DistributedComponentRegistry"/>
		<provide interface="de.rcenvironment.core.communication.routing.NetworkTopologyChangeListener"/>
	</service>
	<reference name="Communication Service"
		interface="de.rcenvironment.rce.communication.CommunicationService"
		cardinality="1..1"
		bind="bindCommunicationService"
		policy="dynamic"
	/>
	
	<reference name="Platform Service"
		interface="de.rcenvironment.rce.communication.PlatformService"
		cardinality="1..1"
		bind="bindPlatformService"
		policy="dynamic"
		/>
</scr:component>

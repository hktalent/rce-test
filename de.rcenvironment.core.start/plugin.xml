<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.rcenvironment.core.start.Application">
         </run>
      </application>
   </extension>
      
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="%applicationName"
            application="de.rcenvironment.core.start.application">
         <property
               name="windowImages"
               value="%windowImages">
         </property>
         <property
               name="aboutText"
               value="%aboutMessage">
         </property>
         <property
               name="aboutImage"
               value="%aboutImage">
         </property>
         <property
               name="startupProgressRect"
               value="0,280,455,15">
         </property>
         <property
               name="appName"
               value="%applicationName">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <!-- START ProgressBar im Splash -->
            <property name="startupProgressRect" value="5,150,570,15"/>
            <property name="startupForegroundColor" value="FFFFFF"/>
            <property name="startupMessageRect" value="7,130,570,20"/>
		<!-- END ProgressBar im Splash -->
      </product>
   </extension>
   
  <extension point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="de.rcenvironment.core.start.SplashHandler"
            id="de.rcenvironment.core.start.SplashHandler">
      </splashHandler>
      <splashHandlerProductBinding
            productId="de.rcenvironment.core.start.product"
            splashId="de.rcenvironment.core.start.SplashHandler">
      </splashHandlerProductBinding>
   </extension>
   
</plugin>

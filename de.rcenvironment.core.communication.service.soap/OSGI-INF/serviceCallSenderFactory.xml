<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" immediate="true" activate="activate" deactivate="deactivate" name="SOAP Communication Serivce">
	<implementation class="de.rcenvironment.rce.communication.soap.internal.SOAPServiceCallSenderFactory" /> 
	<service>
		<provide interface="de.rcenvironment.rce.communication.service.spi.ServiceCallSenderFactory" /> 
	</service>
	<property name="protocol" value="de.rcenvironment.rce.communication.service.soap" />
	<reference bind="bindConfigurationService"
        cardinality="1..1"
        interface="de.rcenvironment.rce.configuration.ConfigurationService"
        name="Configuration Service"
        policy="dynamic"
        />
    <reference bind="bindPlatformService"
        cardinality="1..1"
        interface="de.rcenvironment.rce.communication.PlatformService"
        name="Platform Service"
        policy="dynamic"
        />
    <reference bind="bindJettyService"
        cardinality="1..1"
        interface="de.rcenvironment.rce.jetty.JettyService"
        name="Jetty Service"
        policy="dynamic"
        />
    <reference bind="bindServiceCallHandler"
        cardinality="1..1"
        interface="de.rcenvironment.rce.communication.service.ServiceCallHandler"
        name="Service Call Handler"
        policy="dynamic"
        />
</scr:component>
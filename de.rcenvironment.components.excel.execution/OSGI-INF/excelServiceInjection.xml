<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" factory="de.rcenvironment.rce.component" name="Excel">

	<implementation class="de.rcenvironment.rce.components.excel.ExcelComponent"/>
	<service>
		<provide interface="de.rcenvironment.rce.component.Registerable"/>
	</service>

    <reference
        name="Excel Service"
        interface="de.rcenvironment.rce.components.excel.commons.ExcelService"
        cardinality="1..1"
        bind="bindExcelService"
        unbind="unbindExcelService"
        policy="dynamic"
    /> 
 	
 	<reference 
 		name="Distributed Notification Service"
		interface="de.rcenvironment.rce.notification.DistributedNotificationService"
		cardinality="1..1"
		bind="bindDistributedNotificationService"
		unbind="unbindDistributedNotificationService"
		policy="dynamic"
	/>
	
	<property name="rce.component.configuration" type="String">
		xlFilename:java.lang.String
		preMacro:java.lang.String
		runMacro:java.lang.String
		postMacro:java.lang.String
		Driver:java.lang.Boolean:false
	</property>
	
	<property name="rce.component.name" type="String" value="Excel"/>
	
	<property name="rce.component.group" type="String" value="Execution"/>
	
	<property name="rce.component.class" type="String" value="de.rcenvironment.rce.components.excel.ExcelComponent"/>
	
	<property name="rce.component.icon-16" type="String" value="/resources/excel_16.png"/>
    <property name="rce.component.icon-32" type="String" value="/resources/excel_32.png"/>
    
</scr:component>
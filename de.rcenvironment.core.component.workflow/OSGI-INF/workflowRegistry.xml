<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" name="Workflow Registry">
	<implementation class="de.rcenvironment.rce.component.workflow.internal.WorkflowRegistryImpl"/>
	<service>
		<provide interface="de.rcenvironment.rce.component.workflow.WorkflowRegistry"/>
	</service>
	<reference name="Distributed Component Registry"
		interface="de.rcenvironment.rce.component.DistributedComponentRegistry"
		cardinality="1..1"
		bind="bindDistributedComponentRegistry"
		policy="dynamic"
	/>
	<reference name="Distributed Notification Service"
		interface="de.rcenvironment.rce.notification.DistributedNotificationService"
		cardinality="1..1"
		bind="bindDistributedNotificationService"
		policy="dynamic"
	/>
	<reference name="Communication Service"
		interface="de.rcenvironment.rce.communication.CommunicationService"
		cardinality="1..1"
		bind="bindCommunicationService"
		policy="dynamic"
	/>
		
</scr:component>


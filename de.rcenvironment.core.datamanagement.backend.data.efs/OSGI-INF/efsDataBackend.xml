<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
    activate="activate" name="EFS Data Backend">
	<implementation class="de.rcenvironment.rce.datamanagement.backend.data.efs.internal.EFSDataBackend" /> 
	<service>
		<provide interface="de.rcenvironment.rce.datamanagement.backend.DataBackend" /> 	
	</service>
	<property name="de.rcenvironment.rce.datamanagement.backend.data.provider"
		value="de.rcenvironment.rce.datamanagement.backend.data.efs" />
	<property name="de.rcenvironment.rce.datamanagement.backend.data.scheme"
		value="efs" />
	<reference bind="bindConfigurationService"
		cardinality="1..1"
		interface="de.rcenvironment.rce.configuration.ConfigurationService"
		name="Configuration Service"
		policy="dynamic"
	/>
	<reference bind="bindEncapsulatedEFSService"
		cardinality="1..1"
		interface="de.rcenvironment.rce.datamanagement.backend.data.efs.internal.EncapsulatedEFSService"
		name="Encapsulated EFS Service"
		policy="dynamic"
	/>
</scr:component>

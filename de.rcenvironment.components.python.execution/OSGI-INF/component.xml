<?xml version="1.0"?>
<component factory="de.rcenvironment.rce.component" name="Python">
	
	<implementation class="de.rcenvironment.rce.components.python.PythonComponent"/>
	
	<service>
		<provide interface="de.rcenvironment.rce.component.Registerable"/>
	</service>
	
	<reference name="Distributed Notification Service"
		interface="de.rcenvironment.rce.notification.DistributedNotificationService"
		cardinality="1..1"
		bind="bindNotificationService"
		unbind="unbindNotificationService"
		policy="dynamic"
	/>
	
	<reference name="Python Executor Factory"
		interface="de.rcenvironment.executor.python.PythonExecutorFactory"
		cardinality="1..1"
		bind="bindPythonExecutorFactory"
		unbind="unbindPythonExecutorFactory"
		policy="dynamic"
	/>
	
	<property name="rce.component.name" type="String" value="Python"/>
	
	<property name="rce.component.group" type="String" value="Execution"/>
	
	<property name="rce.component.class" type="String" value="de.rcenvironment.rce.components.python.PythonComponent"/>
	
	<property name="rce.component.configuration" type="String">
		script:java.lang.String
		pythonInstallation:java.lang.String:${pathPlaceholder}
        debug:java.lang.Boolean:false
      	usage of script:java.lang.String:NEW
		remote path of existing script:java.lang.String
		remote upload path of new script:java.lang.String

    </property> 
    
    <property name="rce.component.placeholderAttributes" type="String">
		pathPlaceholder#guiName=Python installation:priority=1:isPath=true
	
	</property>
	
	
	<property name="rce.component.icon-16" type="String" value="/resources/python_16.png"/>
    <property name="rce.component.icon-32" type="String" value="/resources/python_32.png"/>
    <reference
		bind="bindPersistentSettingsService"
		unbind="unbindPersistentSettingsService"
		cardinality="1..1"
		interface="de.rcenvironment.rce.configuration.PersistentSettingsService"
		name="Persistent Settings Service"
		policy="dynamic"
	/>
</component>

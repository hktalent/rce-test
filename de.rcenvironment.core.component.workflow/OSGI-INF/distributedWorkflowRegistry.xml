<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" name="Distributed Workflow Registry">
	<implementation class="de.rcenvironment.rce.component.workflow.internal.DistributedWorkflowRegistryImpl"/>
	<service>
		<provide interface="de.rcenvironment.rce.component.workflow.DistributedWorkflowRegistry"/>
	</service>
	<reference name="Communication Service"
		interface="de.rcenvironment.rce.communication.CommunicationService"
		cardinality="1..1"
		bind="bindCommunicationService"
		policy="dynamic"
	/>
	
	<reference name="Workflow Registry"
		interface="de.rcenvironment.rce.component.workflow.WorkflowRegistry"
		cardinality="1..1"
		bind="bindWorkflowRegistry"
		policy="dynamic"
	/>
	
</scr:component>
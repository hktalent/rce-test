<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
    activate="activate" deactivate="deactivate" name="Derby Catalog Backend">
	<implementation class="de.rcenvironment.rce.datamanagement.backend.catalog.derby.internal.DerbyCatalogBackend" /> 
	<service>
		<provide interface="de.rcenvironment.rce.datamanagement.backend.CatalogBackend" /> 
	</service>
	<property name="de.rcenvironment.rce.datamanagement.backend.catalog.provider"
		value="de.rcenvironment.rce.datamanagement.backend.catalog.derby" />
	<reference bind="bindConfigurationService"
		cardinality="1..1"
		interface="de.rcenvironment.rce.configuration.ConfigurationService"
		name="Configuration Service"
		policy="dynamic"
	/>
	<reference bind="bindPlatformService"
		cardinality="1..1"
		interface="de.rcenvironment.rce.communication.PlatformService"
		name="Platform Service"
		policy="dynamic"
	/>
</scr:component>

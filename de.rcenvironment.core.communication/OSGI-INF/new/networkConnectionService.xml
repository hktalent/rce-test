<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
	activate="activate" deactivate="deactivate" immediate="true" name="Network Connection Service">
	<implementation class="de.rcenvironment.core.communication.connection.internal.NetworkConnectionServiceImpl" />
	<service>
		<provide interface="de.rcenvironment.core.communication.connection.NetworkConnectionService"/>
	</service>
	<reference 
		name="Network Transport Provider" 
		interface="de.rcenvironment.core.communication.transport.spi.NetworkTransportProvider" 
		cardinality="0..n" 
		bind="addNetworkTransportProvider" 
		unbind="removeNetworkTransportProvider"
		policy="dynamic" 
	/>
	<reference 
		name="NodeConfigurationService" 
		interface="de.rcenvironment.core.communication.configuration.NodeConfigurationService" 
		cardinality="1..1" 
		bind="bindNodeConfigurationService" 
		policy="dynamic"
	/>
	<reference
		name="RequestPayloadHandler" 
		interface="de.rcenvironment.core.communication.connection.internal.RequestPayloadHandler" 
		cardinality="1..1" 
		bind="bindRequestPayloadHandler" 
		policy="dynamic"
	/>
</scr:component>

<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="Workflow Description Persistence Handler">
	<implementation class="de.rcenvironment.rce.component.workflow.WorkflowDescriptionPersistenceHandler"/>
	<reference name="Distributed Component Registry"
		interface="de.rcenvironment.rce.component.DistributedComponentRegistry"
		bind="bindDistributedComponentRegistry"
		unbind="unbindDistributedComponentRegistry"
		cardinality="1..1"
		policy="dynamic"
		/>
	<reference name="Platform Service"
		interface="de.rcenvironment.rce.communication.PlatformService"
		cardinality="1..1"
		bind="bindPlatformService"
		unbind="unbindPlatformService"
		policy="dynamic"
		/>
</scr:component>

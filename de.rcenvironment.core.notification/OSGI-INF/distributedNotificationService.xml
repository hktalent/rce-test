<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" name="Distributed Notification Servivce">
	<implementation class="de.rcenvironment.rce.notification.internal.DistributedNotificationServiceImpl" />
	<service>
    	<provide interface="de.rcenvironment.rce.notification.DistributedNotificationService" />
	</service>
	<reference name="Notification Service"
 		interface="de.rcenvironment.rce.notification.NotificationService"
 		cardinality="1..1"
 		bind="bindNotificationService"
 		policy="dynamic"
 	/>
 	<reference
		name="Communication Service"
		interface="de.rcenvironment.rce.communication.CommunicationService"
		cardinality="1..1"
		bind="bindCommunicationService"
		policy="dynamic"/>
</scr:component>
  	  